<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/ganyu_light">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Campus:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:textColor="@color/ganyu_dark" />

    <Spinner
        android:id="@+id/campus_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ganyu_primary"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Room:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:textColor="@color/ganyu_dark" />

    <Spinner
        android:id="@+id/room_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ganyu_primary"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnScan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Scanning"
        android:backgroundTint="@color/ganyu_dark"
        android:textColor="@android:color/white"
        app:elevation="4dp"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnClear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:backgroundTint="@color/ganyu_silver"
        android:textColor="@android:color/white"
        app:elevation="4dp"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnUpdateLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Location"
        android:backgroundTint="@color/ganyu_disabled"
        android:textColor="@android:color/white"
        app:elevation="4dp"
        android:layout_marginBottom="16dp"
        android:enabled="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scanned Items:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/ganyu_dark"/>

    <ListView
        android:id="@+id/lvMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@color/ganyu_primary"
        android:dividerHeight="1dp"/>
</LinearLayout>
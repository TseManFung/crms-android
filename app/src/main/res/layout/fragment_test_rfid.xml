<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TestRfidFragment">

    <Spinner
        android:id="@+id/spnBank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvSensitivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Distance Sensitivity: 30"/>
    <SeekBar
        android:id="@+id/seekSensitivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:max="100"
        android:progress="30" />
    <TextView
        android:id="@+id/tvangleSmoothingFactor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Angle Smoothing Factor: 20"/>
    <SeekBar
        android:id="@+id/seekSmoothing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:max="100"
        android:progress="20" />
    <TextView
        android:id="@+id/tvPathLoss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Path Loss: 25"/>

    <SeekBar
        android:id="@+id/seekPathLoss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:max="50"
        android:progress="25" />
    <Button
        android:id="@+id/btnScan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="scan" />

    <Button
        android:id="@+id/btnStop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="stop" />

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/arrow" />

    <ListView
        android:id="@+id/lvMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>